# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
NODE_ENV=development

# Go API
PORT=8000
GRPC_PORT=50051
JWT_SECRET=dev-secret-key-change-in-production

# Database (PostgreSQL - Default)
DATABASE_URL=postgresql://trading:trading-dev@postgres:5432/trading_system?sslmode=disable

POSTGRES_USER=trading
POSTGRES_PASSWORD=trading-dev
POSTGRES_DB=trading_system
POSTGRES_PORT=5432


# Database (SQLite - Development fallback)
# DATABASE_URL=file:./db/trading.db

ENABLE_LIVE_UPDATES=true

# Supabase (Production Alternative)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_DB_URL=postgresql://postgres:password@db.xxx.supabase.co:5432/postgres
SUPABASE_ANON_KEY=your-anon-key

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379
REDIS_MAX_MEMORY=256m

# Data Providers
MASSIVE_API_KEY=your-massive-api-key
MASSIVE_ENABLED=false
MASSIVE_RATE_LIMIT_CALLS=4
MASSIVE_RATE_LIMIT_WINDOW=60.0
# Alpha Vantage API (Optional - system will work without it)
# Get your free API key from: https://www.alphavantage.co/support/#api-key
# Free tier: 25 requests/day, 5 requests/minute
# Premium plans available at: https://www.alphavantage.co/premium/
# Leave empty to disable Alpha Vantage (Yahoo Finance will be used instead)
ALPHAVANTAGE_API_KEY=your-alphavantage-api-key
ALPHAVANTAGE_RATE_LIMIT_CALLS=1
ALPHAVANTAGE_RATE_LIMIT_WINDOW=1.0
PRIMARY_DATA_PROVIDER=yahoo_finance
FALLBACK_DATA_PROVIDER=massive
DEFAULT_DATA_PROVIDER=yahoo_finance

# Service URLs
PYTHON_WORKER_URL=http://python-worker:8001

# LLM / AI
OPENAI_API_KEY=your-openai-key
ANTHROPIC_API_KEY=your-anthropic-key
LITELLM_PROXY_URL=http://localhost:4000
LITELLM_MASTER_KEY=your-master-key

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_GRPC_URL=http://localhost:50051
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
